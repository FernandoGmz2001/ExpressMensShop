<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./css/create.css" rel="stylesheet" type="text/css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <title>Document</title>
  </head>
  <body>
    <%- include ("template/navbar") %>
    <div class="form-container">
      <form action="/save" method="POST" class="form">
        <div class="form-title"><h3>Nuevo Producto</h3></div>
        <div class="form-content">
          <div class="input-container">
            <label>Nombre</label>
            <input type="text" required="true" name="nombre" id="nombre" />
          </div>
          <div class="input-container">
            <label>Precio</label>
            <input
              type="text"
              required="true"
              name="precio"
              id="precio"
              value=""
            />
          </div>
          <div class="input-container">
            <label>Peso</label>
            <input type="text" name="peso" />
          </div>
          <div class="input-container">
            <label>Descripción</label>
            <textarea name="descripcion" required id=""></textarea>
            <!-- <input type="text" required name="descripcion" /> -->
          </div>
          <div class="input-container">
            <label>Imagen</label>
            <input type="text" required name="imagen" />
          </div>
          <div class="input-container">
            <label>Categoría</label>
            <select name="id_categoria" required id="id_categoria">
              <option value="BOL" selected>BOL</option>
              <option value="CAM">CAM</option>
              <option value="CAR">CAR</option>
              <option value="COR">COR</option>
              <option value="LEN">LEN</option>
              <option value="MOC">MOC</option>
              <option value="MON">MON</option>
              <option value="PAN">PAN</option>
              <option value="PER">PER</option>
              <option value="PLA">PLA</option>
              <option value="PNS">PNS</option>
              <option value="REL">REL</option>
              <option value="SHO">SHO</option>
            </select>
          </div>
          <div class="input-container">
            <label>Cantidad</label>
            <input type="text" required name="cantidad" />
          </div>
          <div class="input-container">
            <label>Grosor</label>
            <input type="text" name="grosor" />
          </div>
          <div class="input-container">
            <label>Material</label>
            <input type="text" name="material" />
          </div>
          <div class="input-container">
            <label>Costo en puntos</label>
            <input type="text" required name="costo_puntos" />
          </div>
          <div class="input-container">
            <label>Valor en puntos</label>
            <input type="text" required name="valor_puntos" />
          </div>
          <div class="input-container">
            <label>Id proveedor</label>
            <input type="text" required name="id_proveedor" />
          </div>
          <div class="input-container">
            <label>Marca</label>
            <input type="text" required name="marca" />
          </div>
          <div class="btnContainer">
            <button type="submit" value="submit" class="btnGuardar">
              Crear
            </button>
            <a class="btnCancelar" href="/dashboard">Cancelar</a>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
