<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/users.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="main-dashboard">
      <div class="logo-container">
        <div class="logo-image_container">
          <a href="/">
            <img
              class="logo-image"
              src="/resources/logo-definitivo.png"
              alt=""
            />
          </a>
        </div>
      </div>
      <div class="dashboard-container">
        <div class="sidebar">
          <div class="products-option option">
            <div class="products-image_container image">
              <i class="bx bxs-shopping-bags"></i>
            </div>
            <a href="/dashboard" class="link">Productos</a>
          </div>
          <div class="users-option option focused">
            <div class="user-image_container image">
              <i class="bx bxs-user link-focused"></i>
            </div>
            <a href="/users" class="link link-focused">Usuarios</a>
          </div>
          <div class="orders-option option">
            <i class="bx bx-paper-plane"></i>
            <a href="/orders" class="link">Pedidos</a>
          </div>
          <div class="orders-option option">
            <i class="bx bxs-cog"></i>
            <a href="/storedProcedures" class="link">Reportes</a>
          </div>
          <div class="exit-option option">
            <i class="bx bxs-exit"></i>
            <a href="/" class="link">Salir</a>
          </div>
        </div>
        <div class="dashboard-content">
          <!-- <div class="btnCreate-container">
            <a href="/createUser">
              <i class="bx bxs-plus-circle"></i>
            </a>
          </div> -->
          <table class="table">
            <thead>
              <!-- <th class="id-user table">Id</th> -->
              <th class="userId table">Id</th>
              <th class="name table">Nombre</th>
              <th class="firstName table">Apellido Paterno</th>
              <th class="secondName table">Apellido Materno</th>
              <th class="mail table">Correo</th>
              <th class="mail table">Puntos</th>
            </thead>
            <tbody>
              <% results.recordsets[0].forEach((user)=> { %>
              <tr>
                <td class="table-cell"><%= user.Id_Usuario%></td>
                <td class="table-cell"><%= user.Nombre%></td>
                <td class="table-cell"><%= user.Apellido_Paterno %></td>
                <td class="table-cell"><%= user.Apellido_Materno%></td>
                <td class="table-cell"><%= user.Correo%></td>
                <td class="table-cell"><%= user.Puntos%></td>
                <td class="btnEliminar-container">
                  <a
                    href="/deleteUser/<%= user.Id_Usuario%>"
                    class="btnEliminar"
                    >Eliminar</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
