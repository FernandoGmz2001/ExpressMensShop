<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/users.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="main-dashboard">
      <div class="logo-container">
        <div class="logo-image_container">
          <img class="logo-image" src="/resources/DashboardIcon.png" alt="" />
        </div>
        <div class="logo-text"><h1>Dashboard</h1></div>
      </div>
      <div class="dashboard-container">
        <div class="sidebar">
          <div class="products-option option">
            <div class="products-image_container image">
              <i class="bx bxs-shopping-bags"></i>
            </div>
            <a href="/dashboard" class="link">Productos</a>
          </div>
          <div class="users-option option">
            <div class="user-image_container image">
              <i class="bx bxs-user"></i>
            </div>
            <a href="/users" class="link">Usuarios</a>
          </div>
          <div class="orders-option option focused">
            <i class="bx bx-paper-plane"></i>
            <a href="/orders" class="link link-focused">Pedidos</a>
          </div>
          <div class="exit-option option">
            <i class="bx bxs-exit"></i>
            <a href="/" class="link">Salir</a>
          </div>
        </div>
        <div class="dashboard-content">
          <!-- <div class="btnCreate-container">
            <a href="/createUser">
              <i class="bx bxs-plus-circle"></i>
            </a>
          </div> -->
          <table class="table">
            <thead>
              <!-- <th class="id-user table">Id</th> -->
              <th class="userId table">Id Pedido</th>
              <th class="name table">Id/Producto</th>
              <th class="name table">Fecha</th>
              <th class="firstName table">Correo usuario</th>
              <th class="name table">Nombre/Producto</th>
              <th class="name table">Descripcion/Producto</th>
              <th class="secondName table">Cantidad Pedido</th
            </thead>
            <tbody>
              <% results.forEach((pedido)=> { %>
              <tr>
                <td class="table-cell"><%= pedido.Id_Pedido%></td>
                <td class="table-cell"><%= pedido.Id_Producto_Pedido%></td>
                <td class="table-cell"><%= pedido.Fecha_Pedido%></td>

                <td class="table-cell"><%= pedido.Correo_Usuario %></td>
                <td class="table-cell"><%= pedido.Cantidad_Pedido%></td>
                <td class="btnEliminar-container">
                  <a
                    href="/deletePedido/<%= pedido.Id_Pedido%>"
                    class="btnEliminar"
                    onclick="return confirm('EstÃ¡ seguro de eliminar?')"
                    >Eliminar</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <form class="form" action="post" method="/countMonthSells">
        <div class="form-group">
          <p class="ventasMes">Ventas en el mes: </p>
          <button class="" type="submit">Contar</button>
        </div>
      </form>
    </div>
    <script>


    </script>
  </body>
</html>
